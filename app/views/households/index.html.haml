%table#households{:border => 2}
  %thead
    %tr
      %th Name
      %th Review
      %th Address
      %th Website
  %tbody
    - @households.each do |household|
      %tr
        %td= household.name 
        %td= household.review
        %td= household.address
        %td= household.website
        %td= link_to 'Edit Store', edit_household_path(household)
        %td= link_to 'Delete Store', household_path(household), :data => {:confirm => "Are you sure?", :method => "delete"}


%br
%br
= link_to 'Add new store', new_household_path
