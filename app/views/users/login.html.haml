%h2 Login

= form_tag , :method => :put do
    
    =label :account, :username, 'Username/Email'
    = text_field :account, 'username/email'
    
    =label :account, :password, 'Password'
    = password_field :account, 'password'
    
    = submit_tag 'Login'
    
= link_to 'Back', previous_page

= link_to 'reset password', reset_password